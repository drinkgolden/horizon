{% comment %}
Golden Featured Goods Section â€“ displays a selection of products with image, name, flavour notes, price, and actions (Add to Cart, Learn More).
{% endcomment %}
<section id="golden-featured-{{ section.id }}" class="golden-featured-goods section"
         data-section-id="{{ section.id }}" data-section-type="golden-featured-goods">
  <div class="golden-featured-goods__inner">
    <h3 class="golden-featured-goods__title">{{ section.settings.section_heading }}</h3>
    <div class="golden-featured-goods__grid">
      {% for block in section.blocks %}
        {% if block.type == 'product' and block.settings.product %}
          {% assign prod = block.settings.product %}
          <div class="golden-product-card" {{ block.shopify_attributes }}>
            <div class="golden-product-card__image">
              <a href="{{ prod.url }}">
                <img src="{{ prod.featured_image | image_url: width: 400 }}"
                     alt="{{ prod.featured_image.alt | default: prod.title | escape }}" loading="lazy"
                     width="{{ prod.featured_image.width }}" height="{{ prod.featured_image.height }}">
              </a>
            </div>
            <div class="golden-product-card__info">
              <div class="golden-product-card__name">{{ prod.title }}</div>
              {% if block.settings.subtext != blank %}
                <div class="golden-product-card__subtext">{{ block.settings.subtext }}</div>
              {% endif %}
              <div class="golden-product-card__price">
                {% if prod.price_varies %}
                  {{ 'products.product.from_text' | t }} {{ prod.price_min | money }}
                {% else %}
                  {{ prod.price | money }}
                {% endif %}
              </div>
              <div class="golden-product-card__actions">
                {% assign first_variant = prod.selected_or_first_available_variant %}
                {% if first_variant %}
                  <form method="post" action="/cart/add" class="golden-add-to-cart-form">
                    <input type="hidden" name="id" value="{{ first_variant.id }}">
                    {% if first_variant.available %}
                      <button type="submit" class="golden-add-to-cart">{{ 'products.product.add_to_cart' | t }}</button>
                    {% else %}
                      <button type="submit" class="golden-add-to-cart" disabled>{{ 'products.product.sold_out' | t }}</button>
                    {% endif %}
                  </form>
                {% endif %}
                <a href="{{ prod.url }}" class="golden-learn-more">{{ 'sections.slideshow.learn_more' | t }}</a>
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
  {% schema %}
{
  "name": "Golden Featured Goods",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "Featured goods"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Featured Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "text",
          "id": "subtext",
          "label": "Flavour Notes (optional)",
          "default": ""
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Golden Featured Goods",
      "category": "Custom"
    }
  ]
}
{% endschema %}
</section>

<style>
/* Featured Goods Section Styles */
.golden-featured-goods__title {
  text-align: center;
  font-size: 1.5rem;
  margin: 2rem 0 1.5rem;
}
.golden-featured-goods__grid {
  display: flex;
  flex-wrap: wrap;
  gap: 2rem;
  justify-content: center;
}
.golden-product-card {
  width: 300px;
  text-align: left;
}
.golden-product-card__image img {
  width: 100%;
  height: auto;
  display: block;
}
.golden-product-card__name {
  font-weight: bold;
  margin-top: 0.5rem;
}
.golden-product-card__subtext {
  font-size: 0.9rem;
  color: #555;
}
.golden-product-card__price {
  font-weight: bold;
  margin: 0.5rem 0;
}
.golden-product-card__actions {
  display: flex;
  align-items: center;
  gap: 1rem;
}
.golden-add-to-cart-form {
  margin: 0;
}
.golden-add-to-cart {
  background: #000;
  color: #fff;
  padding: 0.5rem 1rem;
  border: none;
  cursor: pointer;
}
.golden-add-to-cart[disabled] {
  background: #888;
  cursor: not-allowed;
}
.golden-learn-more {
  text-decoration: underline;
  font-size: 0.9rem;
}
@media (max-width: 767px) {
  .golden-featured-goods__grid {
    flex-direction: column;
    align-items: center;
  }
  .golden-product-card {
    width: 100%;
    max-width: 400px;
  }
  .golden-product-card__actions {
    flex-direction: column;
    align-items: flex-start;
  }
  .golden-learn-more {
    margin-top: 0.5rem;
  }
}
</style>
