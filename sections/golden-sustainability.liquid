{% comment %}
  Golden sustainability highlight with bilingual headings and CTA link.
{% endcomment %}
<section id="golden-sustainability-{{ section.id }}" class="golden-sustainability section" data-section-id="{{ section.id }}" data-section-type="golden-sustainability">
  <div class="golden-sustainability__inner">
    <h2 class="golden-sustainability__heading">{{ section.settings.main_heading }}</h2>
    <h2 class="golden-sustainability__heading golden-sustainability__heading--maori">{{ section.settings.sub_heading }}</h2>
    <p class="golden-sustainability__description">{{ section.settings.description }}</p>
    <a href="{{ section.settings.reports_link }}" class="golden-sustainability__link">{{ section.settings.reports_label }}</a>
  </div>
</section>

{% schema %}
{
  "name": "Golden Sustainability",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading (English)",
      "default": "We’re playing the long game"
    },
    {
      "type": "text",
      "id": "sub_heading",
      "label": "Sub-heading (Māori)",
      "default": "E purei ana mātou i te kēmu roa"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description Text",
      "default": "If you’d like to see what we’ve achieved so far and our plans for the future, check out our biennial sustainability reports."
    },
    {
      "type": "url",
      "id": "reports_link",
      "label": "Reports Link URL"
    },
    {
      "type": "text",
      "id": "reports_label",
      "label": "Reports Link Label",
      "default": "Download Our Reports"
    }
  ],
  "presets": [
    {
      "name": "Golden Sustainability",
      "category": "Golden"
    }
  ]
}
{% endschema %}
