{% comment %}
Kokako "Just Landed" Section – highlights the new Half-Caf Mugs.
Includes a prominent heading and two CTA links, plus an optional decorative image (flying Kōkako bird).
{% endcomment %}
<section id="kokako-just-landed-{{ section.id }}" class="kokako-just-landed section"
         data-section-id="{{ section.id }}" data-section-type="kokako-just-landed">
  <div class="kokako-just-landed__inner">
    {% if section.settings.decor_image %}
      <!-- Decorative flying bird image (positioned via CSS) -->
      <img src="{{ section.settings.decor_image | image_url: width: 720 }}"
           alt="{{ section.settings.decor_image.alt | default: 'Flying Bird' }}" class="kokako-just-landed__decor" loading="lazy"
           width="{{ section.settings.decor_image.width }}" height="{{ section.settings.decor_image.height }}">
    {% endif %}
    <h2 class="kokako-just-landed__heading">{{ section.settings.land_heading }}</h2>
    <div class="kokako-just-landed__buttons">
      {% for btn in section.blocks %}
        {% if btn.type == 'cta' %}
          <a href="{{ btn.settings.link }}" class="kokako-just-landed__btn" {{ btn.shopify_attributes }}>
            {{ btn.settings.label }}
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
/* "Just Landed" Section Styles */
.kokako-just-landed {
  text-align: center;
  position: relative;
  padding: 4rem 1rem;
}
.kokako-just-landed__heading {
  font-size: 2rem;
  font-weight: 600;
  margin-bottom: 1.5rem;
}
.kokako-just-landed__buttons a {
  display: inline-block;
  margin: 0 0.5rem;
  padding: 0.6rem 1.2rem;
  border: 2px solid #000;
  text-decoration: none;
  font-weight: bold;
  color: #000;
}
.kokako-just-landed__decor {
  position: absolute;
  top: 0;
  right: 5%;
  width: 150px;
  max-width: 30%;
  /* The decorative bird image flies in from the right side */
  animation: fly-in 4s ease-in-out infinite alternate;
  pointer-events: none;
  z-index: 1;
}
@keyframes fly-in {
  0% {
    transform: translateX(100%) translateY(0);
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
  100% {
    transform: translateX(0) translateY(-20%);
    opacity: 0;
  }
}
/* Responsive: center the decor image on smaller screens or hide if needed */
@media (max-width: 600px) {
  .kokako-just-landed__decor {
    display: none; /* Hide decorative image on narrow screens for simplicity */
  }
  .kokako-just-landed__heading {
    font-size: 1.5rem;
  }
}
</style>

{% schema %}
{
  "name": "Just Landed Feature (Kokako)",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "land_heading",
      "label": "Feature Heading",
      "default": "Just Landed, Kōkako Half-Caf Mugs."
    },
    {
      "type": "image_picker",
      "id": "decor_image",
      "label": "Decorative Image (e.g. flying bird)"
    }
  ],
  "blocks": [
    {
      "type": "cta",
      "name": "CTA Link",
      "settings": [
        {
          "type": "url",
          "id": "link",
          "label": "Link URL"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Link Label",
          "default": "Learn more"
        }
      ]
    }
  ],
  "max_blocks": 2,
  "presets": [
    {
      "name": "Kokako Just Landed Feature",
      "category": "Custom",
      "settings": {
        "land_heading": "Just Landed, Kōkako Half-Caf Mugs."
      },
      "blocks": [
        {
          "type": "cta",
          "settings": {
            "link": "/products/half-caf-mugs",
            "label": "Shop now"
          }
        },
        {
          "type": "cta",
          "settings": {
            "link": "#main-content",
            "label": "I'm just browsing"
          }
        }
      ]
    }
  ]
}
{% endschema %}
