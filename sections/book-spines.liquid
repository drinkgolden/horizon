{% liquid
  assign split_divider_color = section.settings.split_divider_color | default: settings.vertical_divider_color | default: '#d9d9d9'
  assign has_header = section.settings.heading != blank or section.settings.subheading != blank
%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<div
  class="
    section
    section--{{ section.settings.section_width }}
    color-{{ section.settings.color_scheme }}
    book-spines
    spacing-style
  "
  style="{% render 'spacing-style', settings: section.settings %}"
>
  {% if has_header %}
    <div class="book-spines__header">
      {% if section.settings.heading != blank %}
        <h2 class="book-spines__heading">
          {{ section.settings.heading }}
        </h2>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <div class="book-spines__subheading">
          {{ section.settings.subheading }}
        </div>
      {% endif %}
    </div>
  {% endif %}

  <div
    class="section-content-wrapper book-spines__carousel"
    data-split-showcase="carousel"
    style="--split-divider-color: {{ split_divider_color }};"
  >
    {% render 'split-showcase-carousel', section: section, split_divider_color: split_divider_color %}
  </div>
</div>

{% schema %}
{
  "name": "Book spines",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:settings.heading",
      "default": "Book spines"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "t:settings.text"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "t:settings.width",
      "options": [
        {
          "value": "full-width",
          "label": "t:options.full"
        },
        {
          "value": "page-width",
          "label": "t:options.page"
        }
      ],
      "default": "full-width"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "t:settings.gap",
      "min": 0,
      "max": 80,
      "step": 4,
      "unit": "px",
      "default": 24
    },
    {
      "type": "color",
      "id": "split_divider_color",
      "label": "Divider color",
      "default": "#d9d9d9"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding-inline-start",
      "label": "t:settings.left",
      "min": 0,
      "max": 80,
      "step": 4,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-inline-end",
      "label": "t:settings.right",
      "min": 0,
      "max": 80,
      "step": 4,
      "unit": "px",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "book_spine_panel",
      "name": "Book spine panel"
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Book spines",
      "category": "t:categories.banners",
      "blocks": [
        {
          "type": "book_spine_panel"
        },
        {
          "type": "book_spine_panel"
        },
        {
          "type": "book_spine_panel"
        }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
  .book-spines__header {
    display: grid;
    gap: var(--spacing-xs, 12px);
    margin-block-end: clamp(1.5rem, 1.2rem + 1vw, 2.5rem);
  }

  .book-spines__subheading {
    max-width: 48ch;
  }

  .book-spines__carousel {
    display: block;
  }

  .book-spine-panel {
    position: relative;
  }

  .book-spine-panel__overlay {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .book-spine-panel__spine {
    font-size: var(--font-size-small, 0.75rem);
    letter-spacing: 0.08em;
    text-transform: uppercase;
    opacity: 0.8;
    margin: 0;
  }

  .book-spine-panel__content {
    display: grid;
    gap: var(--content-gap, 12px);
  }

  .book-spine-panel__heading {
    margin: 0;
  }

  .book-spine-panel__eyebrow {
    margin: 0;
    font-size: var(--font-size-small, 0.75rem);
    letter-spacing: 0.12em;
    text-transform: uppercase;
    opacity: 0.7;
  }

  .book-spine-panel__body :where(p) {
    margin: 0;
  }

  .book-spine-panel__cta {
    display: inline-flex;
    align-items: center;
    gap: 0.4em;
  }
{% endstylesheet %}
