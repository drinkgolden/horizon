<section class="location-accordion">
  <div class="accordion-container">
    {% for block in section.blocks %}
      <div class="accordion-item" data-index="{{ forloop.index }}">
        <button class="accordion-title">
          {{ block.settings.title }}
        </button>
        <div class="accordion-content">
          <div class="accordion-image">
            {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | img_url: '720x' }}" alt="{{ block.settings.title }}">
            {% endif %}
          </div>
          <div class="accordion-text">
            <h3>{{ block.settings.location_name }}</h3>
            <p>{{ block.settings.address }}</p>
            <p>{{ block.settings.hours }}</p>
            <p>{{ block.settings.details }}</p>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

<style>
.location-accordion {
  display: flex;
  justify-content: center;
  padding: 3rem 1rem;
  background: #f8f9fb;
  font-family: var(--font-body, sans-serif);
}

.accordion-container {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  width: 100%;
  max-width: 1000px;
}

.accordion-item {
  border-left: 4px solid #e0e3e7;
  overflow: hidden;
  transition: all 0.4s ease;
}

.accordion-title {
  writing-mode: vertical-rl;
  transform: rotate(180deg);
  font-size: 1.1rem;
  text-align: center;
  background: white;
  border: none;
  cursor: pointer;
  width: 60px;
  padding: 1rem 0;
  color: #0a2540;
  transition: background 0.3s ease, color 0.3s ease;
}

.accordion-title:hover {
  background: #0a2540;
  color: white;
}

.accordion-content {
  display: none;
  flex-direction: row;
  align-items: center;
  gap: 2rem;
  background: white;
  padding: 2rem;
  border-radius: 8px;
  box-shadow: 0 8px 24px rgba(0,0,0,0.08);
  animation: fadeIn 0.4s ease;
}

.accordion-content.active {
  display: flex;
}

.accordion-image img {
  width: 320px;
  height: auto;
  border-radius: 8px;
  object-fit: cover;
}

.accordion-text {
  flex: 1;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const items = document.querySelectorAll('.accordion-item');
  items.forEach(item => {
    const title = item.querySelector('.accordion-title');
    const content = item.querySelector('.accordion-content');
    title.addEventListener('click', () => {
      items.forEach(i => i.querySelector('.accordion-content').classList.remove('active'));
      content.classList.toggle('active');
    });
  });
});
</script>

{% schema %}
{
  "name": "Veritcal Accordian",
  "settings": [],
  "blocks": [
    {
      "type": "location",
      "name": "Location",
      "settings": [
        { "type": "text", "id": "title", "label": "Tab Title" },
        { "type": "image_picker", "id": "image", "label": "Location Image" },
        { "type": "text", "id": "location_name", "label": "Location Name" },
        { "type": "text", "id": "address", "label": "Address" },
        { "type": "text", "id": "hours", "label": "Hours" },
        { "type": "textarea", "id": "details", "label": "Extra Details" }
      ]
    }
  ],
  "max_blocks": 5,
  "presets": [
    {
      "name": "Veritcal Accordian",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
