{% comment %}
  Golden "Just Landed" section highlighting new arrivals with optional decorative imagery.
{% endcomment %}
<section id="golden-just-landed-{{ section.id }}" class="golden-just-landed section" data-section-id="{{ section.id }}" data-section-type="golden-just-landed">
  <div class="golden-just-landed__inner">
    {% if section.settings.decor_image %}
      <img
        src="{{ section.settings.decor_image | image_url: width: 720 }}"
        alt="{{ section.settings.decor_image.alt | default: 'Decorative image' | escape }}"
        class="golden-just-landed__decor"
        loading="lazy"
        width="{{ section.settings.decor_image.width }}"
        height="{{ section.settings.decor_image.height }}"
      >
    {% endif %}
    <h2 class="golden-just-landed__heading">{{ section.settings.land_heading }}</h2>
    <div class="golden-just-landed__buttons">
      {% for btn in section.blocks %}
        {% if btn.type == 'cta' %}
          <a href="{{ btn.settings.link }}" class="golden-just-landed__btn" {{ btn.shopify_attributes }}>{{ btn.settings.label }}</a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Golden Just Landed",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "land_heading",
      "label": "Feature Heading",
      "default": "Just Landed, Golden Half-Caf Mugs."
    },
    {
      "type": "image_picker",
      "id": "decor_image",
      "label": "Decorative Image (e.g. flying bird)"
    }
  ],
  "blocks": [
    {
      "type": "cta",
      "name": "CTA Link",
      "settings": [
        {
          "type": "url",
          "id": "link",
          "label": "Link URL"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Link Label",
          "default": "Learn more"
        }
      ]
    }
  ],
  "max_blocks": 2,
  "presets": [
    {
      "name": "Golden Just Landed",
      "category": "Golden"
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "cta",
        "settings": {
          "link": "/products/half-caf-mugs",
          "label": "Shop now"
        }
      },
      {
        "type": "cta",
        "settings": {
          "link": "#main-content",
          "label": "I'm just browsing"
        }
      }
    ]
  }
}
{% endschema %}
