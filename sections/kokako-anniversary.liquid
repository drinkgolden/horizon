{% comment %}
  Kokako anniversary story section featuring optional media, story text, and CTA link.
{% endcomment %}
<section id="kokako-anniversary-{{ section.id }}" class="kokako-anniversary section" data-section-id="{{ section.id }}" data-section-type="kokako-anniversary">
  <div class="kokako-anniversary__inner">
    {% if section.settings.anniv_image %}
      <div class="kokako-anniversary__media">
        <img src="{{ section.settings.anniv_image | image_url: width: 800 }}" alt="{{ section.settings.anniv_image.alt | default: 'Anniversary image' | escape }}" class="kokako-anniversary__img" loading="lazy">
      </div>
    {% endif %}
    <div class="kokako-anniversary__text">
      <h2 class="kokako-anniversary__heading">{{ section.settings.anniv_heading }}</h2>
      <div class="kokako-anniversary__paragraph">{{ section.settings.anniv_text }}</div>
      <a href="{{ section.settings.link_url }}" class="kokako-anniversary__link">{{ section.settings.link_label }}</a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Anniversary Story (Kokako)",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "anniv_heading",
      "label": "Heading",
      "default": "Twenty years has flown by"
    },
    {
      "type": "richtext",
      "id": "anniv_text",
      "label": "Story Text",
      "default": "<p>You know how it is with birthdays – they sneak up on you. One day we were selling coffee from a cart in Aotea Square, the next we were supplying cafés, restaurants and retailers throughout New Zealand.</p>"
    },
    {
      "type": "image_picker",
      "id": "anniv_image",
      "label": "Side Image (optional)"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "CTA Link",
      "default": "/pages/our-story"
    },
    {
      "type": "text",
      "id": "link_label",
      "label": "CTA Link Label",
      "default": "Take a look back"
    }
  ],
  "presets": [
    {
      "name": "Anniversary Story (Kokako)",
      "category": "Custom"
    }
  ]
}
{% endschema %}
