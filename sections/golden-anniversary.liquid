{% comment %}
  Golden anniversary story section featuring optional media, story text, and CTA link.
{% endcomment %}
<section id="golden-anniversary-{{ section.id }}" class="golden-anniversary section" data-section-id="{{ section.id }}" data-section-type="golden-anniversary">
  <div class="golden-anniversary__inner">
    {% if section.settings.anniv_image %}
      <div class="golden-anniversary__media">
        <img
          src="{{ section.settings.anniv_image | image_url: width: 800 }}"
          alt="{{ section.settings.anniv_image.alt | default: 'Anniversary image' | escape }}"
          class="golden-anniversary__img"
          loading="lazy"
          width="{{ section.settings.anniv_image.width }}"
          height="{{ section.settings.anniv_image.height }}"
        >
      </div>
    {% endif %}
    <div class="golden-anniversary__text">
      <h2 class="golden-anniversary__heading">{{ section.settings.anniv_heading }}</h2>
      <div class="golden-anniversary__paragraph">{{ section.settings.anniv_text }}</div>
      <a href="{{ section.settings.link_url }}" class="golden-anniversary__link">{{ section.settings.link_label }}</a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Golden Anniversary",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "anniv_heading",
      "label": "Heading",
      "default": "Twenty years has flown by"
    },
    {
      "type": "richtext",
      "id": "anniv_text",
      "label": "Story Text",
      "default": "<p>You know how it is with birthdays – they sneak up on you. One day we were selling coffee from a cart in Aotea Square, the next we were supplying cafés, restaurants and retailers throughout New Zealand.</p>"
    },
    {
      "type": "image_picker",
      "id": "anniv_image",
      "label": "Side Image (optional)"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "CTA Link"
    },
    {
      "type": "text",
      "id": "link_label",
      "label": "CTA Link Label",
      "default": "Take a look back"
    }
  ],
  "presets": [
    {
      "name": "Golden Anniversary",
      "category": "Golden"
    }
  ]
}
{% endschema %}
