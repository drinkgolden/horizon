{%- doc -%}
  Featured Blog Posts Title Block

  Renders a blog title with text styling options.
  Uses the blog title from section settings or placeholder text.

  Block receives:
  - block.settings: All configured settings from the schema
  - section.settings.blog: The parent section's blog setting

  @example
  {% content_for 'block', type: '_featured-blog-posts-title', id: 'blog-title' %}
{%- enddoc -%}



{% liquid
  assign block_settings = block.settings

  if closest.blog != blank
    assign blog_title = closest.blog.title
  elsif section.settings.blog != blank
    assign blog_title = section.settings.blog.title
  else
    assign blog_title = 'placeholders.blog_posts' | t
  endif

  assign use_split_headings = false
  if block_settings.left_heading != blank or block_settings.right_heading != blank
    assign use_split_headings = true
  endif

  if block_settings.left_heading != blank
    assign left_heading = block_settings.left_heading
  else
    assign left_heading = blog_title
  endif

  assign right_heading = block_settings.right_heading
  assign show_left_heading = false
  if left_heading != blank
    assign show_left_heading = true
  endif
  assign show_right_heading = false
  if right_heading != blank
    assign show_right_heading = true
  endif

  assign header_classes = 'details__header'
  if show_left_heading
    assign header_classes = header_classes | append: ' details__header--has-left'
  else
    assign header_classes = header_classes | append: ' details__header--no-left'
  endif
  if show_right_heading
    assign header_classes = header_classes | append: ' details__header--has-right'
  endif
  if show_right_heading and show_left_heading == false
    assign header_classes = header_classes | append: ' details__header--right-only'
  endif

  capture heading_styles
    if block_settings.padding_block_start != blank
      echo 'padding-block-start: ' | append: block_settings.padding_block_start | append: 'px;'
    endif
    if block_settings.padding_block_end != blank
      echo 'padding-block-end: ' | append: block_settings.padding_block_end | append: 'px;'
    endif
    if block_settings.padding_inline_start != blank
      echo 'padding-inline-start: ' | append: block_settings.padding_inline_start | append: 'px;'
    endif
    if block_settings.padding_inline_end != blank
      echo 'padding-inline-end: ' | append: block_settings.padding_inline_end | append: 'px;'
    endif
    if block_settings.heading_type_preset != blank
      echo '--accordion-heading-font-family: var(--font-' | append: block_settings.heading_type_preset | append: '--family);'
      echo '--accordion-heading-font-style: var(--font-' | append: block_settings.heading_type_preset | append: '--style);'
      echo '--accordion-heading-font-weight: var(--font-' | append: block_settings.heading_type_preset | append: '--weight);'
      echo '--accordion-heading-text-case: var(--font-' | append: block_settings.heading_type_preset | append: '--case);'
      echo '--accordion-heading-line-height: var(--font-' | append: block_settings.heading_type_preset | append: '--line-height);'
      echo '--accordion-heading-base-size: var(--font-' | append: block_settings.heading_type_preset | append: '--size);'
    endif
    if block_settings.right_heading_type_preset != blank and block_settings.right_heading_type_preset != 'match'
      echo '--accordion-right-heading-font-family: var(--font-' | append: block_settings.right_heading_type_preset | append: '--family);'
      echo '--accordion-right-heading-font-style: var(--font-' | append: block_settings.right_heading_type_preset | append: '--style);'
      echo '--accordion-right-heading-font-weight: var(--font-' | append: block_settings.right_heading_type_preset | append: '--weight);'
      echo '--accordion-right-heading-text-case: var(--font-' | append: block_settings.right_heading_type_preset | append: '--case);'
      echo '--accordion-right-heading-line-height: var(--font-' | append: block_settings.right_heading_type_preset | append: '--line-height);'
      echo '--accordion-right-heading-base-size: var(--font-' | append: block_settings.right_heading_type_preset | append: '--size);'
    endif

    assign heading_min_numeric = block_settings.heading_min_size | default: 0 | times: 1
    assign heading_max_numeric = block_settings.heading_max_size | default: 0 | times: 1
    if heading_min_numeric > 0
      echo '--accordion-heading-min-size: ' | append: heading_min_numeric | append: 'rem;'
    endif
    if heading_max_numeric > 0
      echo '--accordion-heading-max-size: ' | append: heading_max_numeric | append: 'rem;'
    endif
    if heading_min_numeric == 0 and heading_max_numeric == 0
      echo '--accordion-heading-size: var(--accordion-heading-base-size, var(--summary-font-size));'
      echo '--accordion-right-heading-size: var(--accordion-right-heading-base-size, var(--accordion-heading-base-size, var(--summary-font-size)));'
    endif
  endcapture
%}

{% if use_split_headings %}
  <div class="{{ header_classes }}" style="{{ heading_styles | strip }}" {{ block.shopify_attributes }}>
    <span class="details__heading details__heading--left"{% unless show_left_heading %} aria-hidden="true"{% endunless %}>
      <span class="details__label">{{ left_heading }}</span>
    </span>
    {% if show_right_heading %}
      <span class="details__heading details__heading--right">
        <span class="details__label">{{ right_heading }}</span>
      </span>
    {% endif %}
  </div>
{% else %}
  {% capture blog_title_text %}
    <h3>{{ blog_title }}</h3>
  {% endcapture %}

  {% render 'text',
    fallback_text: blog_title_text,
    block: block,
    padding-block-start: block_settings.padding_block_start,
    padding-block-end: block_settings.padding_block_end,
    padding-inline-start: block_settings.padding_inline_start,
    padding-inline-end: block_settings.padding_inline_end
  %}
{% endif %}

