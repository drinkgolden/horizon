{%- comment -%}
  Renders border override CSS
{%- endcomment -%}

{%- assign allow_overflow_string = allow_overflow | json | downcase -%}

--border-width: {{ settings.border_width }}px;
--border-style: {{ settings.border }};
--border-color: rgb(var(--color-border-rgb) / {{ settings.border_opacity | divided_by: 100.0 }});
--border-radius: {{ settings.border_radius }}px;
{%- if settings.border_radius > 0 and allow_overflow_string != 'true' -%}
  overflow: hidden;
{%- endif -%}
