{% assign image = settings.iwt_image %}
{% assign heading = settings.iwt_heading %}
{% assign text = settings.iwt_text %}
{% assign button_label = settings.iwt_button_label %}
{% assign button_link = settings.iwt_button_link %}
{% assign position = settings.iwt_image_position | default: 'left' %}

{% unless image == blank and heading == blank and text == blank and button_label == blank %}

<div class="special-row__section special-row__section--iwt special-row__section--iwt-{{ position }}" data-slot="{{ slot }}">
  {% if image != blank %}
    <div class="special-row__media">
      {{
        image
        | image_url: width: 1200
        | image_tag: loading: 'lazy', sizes: '(min-width: 990px) 50vw, 100vw'
      }}
    </div>
  {% endif %}
  <div class="special-row__body">
    {% if heading != blank %}
      <h3 class="special-row__heading">{{ heading }}</h3>
    {% endif %}
    {% if text != blank %}
      <div class="special-row__text rte">{{ text }}</div>
    {% endif %}
    {% if button_label != blank and button_link != blank %}
      <a class="button button--primary special-row__button" href="{{ button_link }}">
        {{- button_label -}}
      </a>
    {% endif %}
  </div>
</div>
{% endunless %}
