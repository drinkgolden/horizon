{%- comment -%}
  Intended for blocks and sections that provide values for all the referenced settings.

  <div style="{%  render 'spacing-padding', settings: section.settings %}">

   Accepts:
      settings: {block.settings || section.settings}
{%- endcomment -%}

{%- liquid
  assign px_scale = 16.0
  assign padding_keys = 'padding-block-start,padding-block-end,padding-inline-start,padding-inline-end' | split: ','
  for key in padding_keys
    assign padding_value = settings[key] | default: 0
    assign numeric_value = padding_value | times: 1
    assign value_string = padding_value | append: ''
    if numeric_value == 0
      assign rem_value = 0
    elsif numeric_value >= 10
      assign rem_value = numeric_value | divided_by: px_scale
    elsif value_string contains '.'
      assign rem_value = numeric_value
    else
      assign rem_value = numeric_value | divided_by: px_scale
    endif
    echo '--'
    echo key
    echo ': '
    echo rem_value
    echo 'rem; '
  endfor
-%}
