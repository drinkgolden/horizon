{% doc %}
  @prompt
    a blog summary carousel 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-blog-carousel-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-blog-carousel-container-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-blog-carousel-header-{{ ai_gen_id }} {
    margin-bottom: 32px;
    text-align: {{ block.settings.heading_alignment }};
  }

  .ai-blog-carousel-heading-{{ ai_gen_id }} {
    margin: 0 0 12px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-blog-carousel-subheading-{{ ai_gen_id }} {
    margin: 0;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.subheading_size }}px;
  }

  .ai-blog-carousel-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .ai-blog-carousel-track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_gap }}px;
    transition: transform 0.5s ease;
  }

  .ai-blog-carousel-card-{{ ai_gen_id }} {
    flex: 0 0 calc((100% - {{ block.settings.card_gap }}px * ({{ block.settings.cards_per_view }} - 1)) / {{ block.settings.cards_per_view }});
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    {% if block.settings.card_border_width > 0 %}
      border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
    {% endif %}
  }

  .ai-blog-carousel-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.image_aspect_ratio }}%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-blog-carousel-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-blog-carousel-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-blog-carousel-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-blog-carousel-content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
  }

  .ai-blog-carousel-date-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
    margin-bottom: 8px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-blog-carousel-title-{{ ai_gen_id }} {
    margin: 0 0 12px;
    font-size: {{ block.settings.card_title_size }}px;
    color: {{ block.settings.heading_color }};
    line-height: 1.3;
  }

  .ai-blog-carousel-title-link-{{ ai_gen_id }} {
    color: inherit;
    text-decoration: none;
  }

  .ai-blog-carousel-title-link-{{ ai_gen_id }}:hover {
    opacity: 0.8;
  }

  .ai-blog-carousel-excerpt-{{ ai_gen_id }} {
    font-size: {{ block.settings.excerpt_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin-bottom: 16px;
  }

  .ai-blog-carousel-read-more-{{ ai_gen_id }} {
    display: inline-block;
    font-size: 14px;
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-blog-carousel-read-more-{{ ai_gen_id }}:hover {
    opacity: 0.7;
  }

  .ai-blog-carousel-nav-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
    justify-content: center;
    margin-top: 32px;
  }

  .ai-blog-carousel-nav-button-{{ ai_gen_id }} {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background-color: {{ block.settings.nav_button_background }};
    color: {{ block.settings.nav_button_color }};
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .ai-blog-carousel-nav-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_button_hover_background }};
    color: {{ block.settings.nav_button_hover_color }};
  }

  .ai-blog-carousel-nav-button-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-blog-carousel-nav-button-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
  }

  .ai-blog-carousel-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
  }

  @media screen and (max-width: 989px) {
    .ai-blog-carousel-card-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - {{ block.settings.card_gap }}px * ({{ block.settings.cards_per_view_tablet }} - 1)) / {{ block.settings.cards_per_view_tablet }});
    }
  }

  @media screen and (max-width: 749px) {
    .ai-blog-carousel-card-{{ ai_gen_id }} {
      flex: 0 0 100%;
    }

    .ai-blog-carousel-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<blog-carousel-{{ ai_gen_id }} class="ai-blog-carousel-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-blog-carousel-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-blog-carousel-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-blog-carousel-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <div class="ai-blog-carousel-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.blog != blank and block.settings.blog.articles_count > 0 %}
      <div class="ai-blog-carousel-wrapper-{{ ai_gen_id }}">
        <div class="ai-blog-carousel-track-{{ ai_gen_id }}" data-track>
          {% for article in block.settings.blog.articles limit: block.settings.article_limit %}
            <div class="ai-blog-carousel-card-{{ ai_gen_id }}">
              <div class="ai-blog-carousel-image-wrapper-{{ ai_gen_id }}">
                {% if article.image %}
                  <img
                    src="{{ article.image | image_url: width: 800 }}"
                    alt="{{ article.image.alt | escape }}"
                    loading="lazy"
                    width="800"
                    height="{{ 800 | times: block.settings.image_aspect_ratio | divided_by: 100 }}"
                    class="ai-blog-carousel-image-{{ ai_gen_id }}"
                  >
                {% else %}
                  <div class="ai-blog-carousel-image-placeholder-{{ ai_gen_id }}">
                    {{ 'image' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>
              <div class="ai-blog-carousel-content-{{ ai_gen_id }}">
                {% if block.settings.show_date %}
                  <div class="ai-blog-carousel-date-{{ ai_gen_id }}">
                    {{ article.published_at | date: '%B %d, %Y' }}
                  </div>
                {% endif %}
                <h3 class="ai-blog-carousel-title-{{ ai_gen_id }}">
                  <a href="{{ article.url }}" class="ai-blog-carousel-title-link-{{ ai_gen_id }}">
                    {{ article.title }}
                  </a>
                </h3>
                {% if block.settings.show_excerpt %}
                  <div class="ai-blog-carousel-excerpt-{{ ai_gen_id }}">
                    {% if article.excerpt != blank %}
                      {{ article.excerpt | strip_html | truncate: block.settings.excerpt_length }}
                    {% else %}
                      {{ article.content | strip_html | truncate: block.settings.excerpt_length }}
                    {% endif %}
                  </div>
                {% endif %}
                {% if block.settings.show_read_more %}
                  <a href="{{ article.url }}" class="ai-blog-carousel-read-more-{{ ai_gen_id }}">
                    {{ block.settings.read_more_text }}
                  </a>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>

      {% if block.settings.show_navigation %}
        <div class="ai-blog-carousel-nav-{{ ai_gen_id }}">
          <button
            class="ai-blog-carousel-nav-button-{{ ai_gen_id }}"
            data-prev
            aria-label="Previous slide"
          >
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
          </button>
          <button
            class="ai-blog-carousel-nav-button-{{ ai_gen_id }}"
            data-next
            aria-label="Next slide"
          >
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </button>
        </div>
      {% endif %}
    {% else %}
      <div class="ai-blog-carousel-empty-{{ ai_gen_id }}">
        <p>Select a blog to display articles</p>
      </div>
    {% endif %}
  </div>
</blog-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class BlogCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.cardsPerView = {{ block.settings.cards_per_view }};
        this.cardsPerViewTablet = {{ block.settings.cards_per_view_tablet }};
      }

      connectedCallback() {
        this.track = this.querySelector('[data-track]');
        this.prevButton = this.querySelector('[data-prev]');
        this.nextButton = this.querySelector('[data-next]');

        if (!this.track) return;

        this.cards = Array.from(this.track.children);
        this.totalCards = this.cards.length;

        if (this.prevButton && this.nextButton) {
          this.prevButton.addEventListener('click', () => this.prev());
          this.nextButton.addEventListener('click', () => this.next());
        }

        this.updateCardsPerView();
        this.updateButtons();

        window.addEventListener('resize', () => {
          this.updateCardsPerView();
          this.updatePosition();
        });
      }

      updateCardsPerView() {
        const width = window.innerWidth;
        if (width <= 749) {
          this.cardsPerView = 1;
        } else if (width <= 989) {
          this.cardsPerView = this.cardsPerViewTablet;
        } else {
          this.cardsPerView = {{ block.settings.cards_per_view }};
        }
      }

      prev() {
        if (this.currentIndex > 0) {
          this.currentIndex--;
          this.updatePosition();
        }
      }

      next() {
        const maxIndex = Math.max(0, this.totalCards - this.cardsPerView);
        if (this.currentIndex < maxIndex) {
          this.currentIndex++;
          this.updatePosition();
        }
      }

      updatePosition() {
        const cardWidth = this.cards[0].offsetWidth;
        const gap = {{ block.settings.card_gap }};
        const offset = -(this.currentIndex * (cardWidth + gap));
        this.track.style.transform = `translateX(${offset}px)`;
        this.updateButtons();
      }

      updateButtons() {
        if (!this.prevButton || !this.nextButton) return;

        const maxIndex = Math.max(0, this.totalCards - this.cardsPerView);
        this.prevButton.disabled = this.currentIndex === 0;
        this.nextButton.disabled = this.currentIndex >= maxIndex;
      }
    }

    customElements.define('blog-carousel-{{ ai_gen_id }}', BlogCarousel{{ ai_gen_id }});
  })();
</script>

