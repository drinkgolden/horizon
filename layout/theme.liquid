<!doctype html>
{% liquid
  assign html_classes = 'no-js'
  if request.design_mode
    assign html_classes = html_classes | append: ' shopify-design-mode'
  endif
%}
<html class="{{ html_classes }}" lang="{{ request.locale.iso_code }}">
  <head>
    {%- if settings.favicon != blank -%}
      <link
        rel="icon"
        type="image/png"
        href="{{ settings.favicon | image_url: width: 32, height: 32 }}"
      >
    {%- endif -%}

    {% comment %} This a way to wait for main content to load when navigating to a new page so that the view transitions can work consistently {% endcomment %}
    <link
      rel="expect"
      href="#MainContent"
      blocking="render"
      id="view-transition-render-blocker"
    >

    {%- render 'meta-tags' -%}
    {%- render 'stylesheets' -%}
    {%- render 'fonts' -%}
    {%- render 'scripts' -%}
    {%- render 'theme-styles-variables' -%}
    {%- render 'color-schemes' -%}

    {% if request.design_mode %}
      {%- render 'theme-editor' -%}
    {% endif %}

    {{ content_for_header }}

    {{ 'font-override.css' | asset_url | stylesheet_tag }}
    {% liquid
      assign section_gridline_color = settings.section_gridline_color | default: '#e5e5e5'
      assign section_gridline_color_dark = settings.section_gridline_color_dark | default: 'rgba(255,255,255,0.12)'
      assign vertical_divider_color = settings.vertical_divider_color | default: section_gridline_color
      assign gridlines_enabled = settings.section_gridlines_enable
      assign horizontal_enabled = false
      assign vertical_enabled = false
      if gridlines_enabled
        if settings.section_gridlines_horizontal
          assign horizontal_enabled = true
        endif
        if settings.section_gridlines_vertical
          assign vertical_enabled = true
        endif
      endif
      assign horizontal_color_default = 'transparent'
      assign horizontal_color_dark = 'transparent'
      if horizontal_enabled
        assign horizontal_color_default = section_gridline_color
        assign horizontal_color_dark = section_gridline_color_dark
      endif
      assign vertical_divider_output = 'transparent'
      if vertical_enabled
        assign vertical_divider_output = vertical_divider_color
      endif
    %}
    <style id="SplitShowcaseDividerColor">
      :root {
        --vertical-divider-color: {{ vertical_divider_output }};
      }
    </style>
  </head>

  {% liquid
    assign body_classes = 'page-width-' | append: settings.page_width | append: ' card-hover-effect-' | append: settings.card_hover_effect
    if settings.side_columns_enable
      assign body_classes = body_classes | append: ' has-side-columns'
      if settings.side_columns_enable_mobile
        assign body_classes = body_classes | append: ' has-side-columns--mobile'
      endif
    endif
    if settings.enable_bottom_motif_button
      assign body_classes = body_classes | append: ' has-floating-motif-button'
    endif
    if settings.section_gridlines_enable
      assign body_classes = body_classes | append: ' has-section-gridlines'
      if settings.section_gridlines_horizontal
        assign body_classes = body_classes | append: ' has-section-gridlines-horizontal'
      endif
      if settings.section_gridlines_vertical
        assign body_classes = body_classes | append: ' has-section-gridlines-vertical'
      endif
    endif
    assign side_columns_background = 'transparent'
    if settings.side_columns_color_scheme == blank
      assign side_columns_color_scheme_id = 'scheme-1'
    else
      assign side_columns_color_scheme_id = settings.side_columns_color_scheme
    endif
    assign side_columns_scheme_settings = blank
    for scheme in settings.color_schemes
      if scheme.id == side_columns_color_scheme_id
        assign side_columns_scheme_settings = scheme
      endif
    endfor
    if side_columns_scheme_settings and side_columns_scheme_settings.settings.background != blank
      assign side_columns_background = 'rgba(' | append: side_columns_scheme_settings.settings.background.rgba | append: ')'
    endif
  %}
  {% capture body_style %}
    --golden-border-width-desktop: 0px;
    --golden-border-width-mobile: 0px;
    --golden-border-fill-color: transparent;
    --golden-gridline-vertical-color: {{ vertical_divider_output }};
    --vertical-divider-color: {{ vertical_divider_output }};
    --golden-gridline-horizontal-color-default: {{ horizontal_color_default }};
    --golden-gridline-horizontal-color-dark: {{ horizontal_color_dark }};
    --section-gridline-color-default: {{ horizontal_color_default }};
    --section-gridline-color-dark: {{ horizontal_color_dark }};
    --golden-gridline-thickness: {% if gridlines_enabled %}1px{% else %}0px{% endif %};
    --section-gridline-width: var(--golden-gridline-thickness);

    {% if settings.side_columns_enable %}
      --golden-border-width-desktop: {{ settings.side_columns_width_desktop | default: 1.5 | append: 'rem' }};
      --golden-border-width-mobile: {{ settings.side_columns_width_mobile | default: 1 | append: 'rem' }};
      --side-columns-width-desktop: var(--golden-border-width-desktop);
      --side-columns-width-mobile: var(--golden-border-width-mobile);
      --golden-border-fill-color: {{ side_columns_background }};
      --side-column-background-color: var(--golden-border-fill-color);
      --side-column-border-color: var(--golden-gridline-vertical-color, transparent);
      --side-columns-overhang: 12px;
    {% endif %}

    {% if settings.enable_bottom_motif_button %}
      --motif-button-max-width-desktop: {{ settings.bottom_motif_button_max_width_desktop | default: 360 }}px;
      --motif-button-max-width-mobile: {{ settings.bottom_motif_button_max_width_mobile | default: 220 }}px;
      --motif-button-vertical-offset: {{ settings.bottom_motif_button_vertical_offset | default: 16 }}px;
      --motif-button-background: {{ settings.bottom_motif_button_background | default: 'transparent' }};
      --motif-button-text-color: {{ settings.bottom_motif_button_text_color | default: '#ffffff' }};
    {% endif %}
  {% endcapture %}
  <body
    class="{{ body_classes | strip }}"
    {% if body_style != blank %}
      style="{{ body_style | strip }}"
    {% endif %}
  >
    {% if settings.side_columns_enable %}
      <div class="side-column-border side-column-border--left" aria-hidden="true"></div>
      <div class="side-column-border side-column-border--right" aria-hidden="true"></div>
    {% endif %}
    {% render 'skip-to-content-link', href: '#MainContent', text: 'accessibility.skip_to_text' %}
    <div id="header-group">
      {% sections 'header-group' %}
    </div>

    <script
      src="{{ 'critical.js' | asset_url }}"
      type="module"
      async
      blocking="render"
    ></script>

    <main
      id="MainContent"
      class="content-for-layout"
      role="main"
      data-page-transition-enabled="{{ settings.page_transition_enabled }}"
      data-product-transition="{{ settings.transition_to_main_product }}"
      data-template="{{ template }}"
    >
      {{ content_for_layout }}
    </main>

    <div id="footer-group">
      {% sections 'footer-group' %}
    </div>

    {% render 'search-modal' %}

    {% if settings.quick_add or settings.mobile_quick_add %}
      {% render 'quick-add-modal' %}
    {% endif %}

    {% if settings.enable_bottom_motif_button %}
      <div class="floating-motif-button" data-floating-motif-button>
        {% if settings.bottom_motif_button_link != blank %}
          <a class="floating-motif-button__link" href="{{ settings.bottom_motif_button_link }}" aria-label="{{ settings.bottom_motif_button_label | escape }}">
        {% else %}
          <div class="floating-motif-button__link" role="presentation">
        {% endif %}
            <span class="floating-motif-button__surface">
              {% if settings.bottom_motif_button_svg != blank %}
                {{
                  settings.bottom_motif_button_svg
                  | image_url: width: 800
                  | image_tag:
                    loading: 'lazy',
                    class: 'floating-motif-button__motif',
                    alt: '',
                    role: 'presentation'
                }}
              {% endif %}
              <span class="floating-motif-button__label">{{ settings.bottom_motif_button_label }}</span>
            </span>
        {% if settings.bottom_motif_button_link != blank %}
          </a>
        {% else %}
          </div>
        {% endif %}
      </div>
    {% endif %}
  </body>
</html>
